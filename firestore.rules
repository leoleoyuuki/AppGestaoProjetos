rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra de leitura global para dados de propriedade do usuário.
    // Isso permite que as consultas de grupo de coleção funcionem de forma segura e eficiente.
    match /users/{userId}/{document=**} {
      allow read: if request.auth != null && request.auth.uid == userId;
    }

    // Gerenciamento de perfil de usuário
    match /users/{userId} {
      allow list: if false; // Nega a listagem de todos os usuários.
      // A regra de escrita é separada da regra de leitura global.
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Gerenciamento de projetos
    match /users/{userId}/projects/{projectId} {
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
    }

    // Itens de Custo
    match /users/{userId}/projects/{projectId}/costItems/{costItemId} {
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
    }
    
    // Itens de Receita
    match /users/{userId}/projects/{projectId}/revenueItems/{revenueItemId} {
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
    }

    // Métodos de Pagamento
    match /users/{userId}/paymentMethods/{paymentMethodId} {
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
    }

    // Custos Fixos
    match /users/{userId}/fixedCosts/{fixedCostId} {
      allow write: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
    }
  }
}
