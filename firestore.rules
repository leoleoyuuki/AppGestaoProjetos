rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Collection Group Queries ---
    // Allow users to query their own items across different projects.
    // The read rule below will secure the individual documents.
    match /{path=**}/revenueItems/{revenueItem} {
      allow list: if request.auth != null;
    }
    match /{path=**}/costItems/{costItem} {
      allow list: if request.auth != null;
    }

    // --- User Data Access ---
    // All user-specific data is nested under their UID.
    match /users/{userId} {
      // --- User Profile Document ---
      // Creation requires the document ID to match the user's UID and the `id` field to be set correctly.
      allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.id == userId;
      
      // Users can read and delete their own profile.
      allow read, delete: if request.auth != null && request.auth.uid == userId;

      // Users can update their own profile, but cannot change the `id` field.
      allow update: if request.auth != null && request.auth.uid == userId && request.resource.data.id == resource.data.id;

      // --- Projects Subcollection ---
      match /projects/{projectId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;

        // --- Revenue Items Subcollection ---
        match /revenueItems/{revenueItemId} {
          allow read: if request.auth != null && resource.data.userId == request.auth.uid;
          allow update, delete: if request.auth != null && request.auth.uid == userId;
          allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
        }
      }
      
      // --- Cost Items Collection ---
      match /costItems/{costItemId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
      }

      // --- Payment Methods Subcollection ---
      match /paymentMethods/{paymentMethodId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
      }

      // --- Cost Categories Subcollection ---
      match /costCategories/{costCategoryId} {
        allow read, list, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null && request.auth.uid == userId && request.resource.data.userId == userId;
      }
    }
  }
}
